<apex:page renderAs="pdf" showHeader="false" sidebar="false">
    <head>
        <style>
            table { 
                width: 100%; 
                border-collapse: collapse; 
                font-size: 11px;
            }
            th, td { 
                border: 1px solid black; 
                padding: 4px;
                vertical-align: top;
            }
            .no-border td {
                border: none;
            }
            .section-title {
                text-align: center;
                font-weight: bold;
                font-size: 14px;
                padding: 8px 0;
            }
            .right-align {
                text-align: right;
            }
            .bold {
                font-weight: bold;
            }
            .borderless {
                border: none !important;
            }
            .small-text {
                font-size: 9px;
            }
        </style>
    </head>

    <div class="section-title">QUOTATION</div>

    <table>
        <tr>
            <th colspan="2">Order Details</th>
            <th colspan="2">Bill to</th>
        </tr>
        <tr>
            <td>Order No.:</td>
            <td>Payment Terms:</td>
            <td>Name:</td>
            <td rowspan="2">Address:</td>
        </tr>
        <tr>
            <td>Order Date:</td>
            <td>Our Bankers:</td>
            <td></td>
        </tr>
        <tr>
            <td>Buyer Ref No.:</td>
            <td>A/c No.:</td>
            <td colspan="2"></td>
        </tr>
        <tr>
            <td>Buyer Ref Date:</td>
            <td>Bank Name:</td>
            <td colspan="2"></td>
        </tr>
        <tr>
            <td>Quotation Validity:</td>
            <td>Branch:</td>
            <td colspan="2"></td>
        </tr>
        <tr>
            <td>Currency:</td>
            <td>Swift Code:</td>
            <td colspan="2"></td>
        </tr>
    </table>

    <table>
        <tr>
            <th colspan="2">Shipment Details</th>
            <th colspan="2">Ship to</th>
        </tr>
        <tr>
            <td>Incoterms:</td>
            <td>Pre-Carriage Mode:</td>
            <td>Name:</td>
            <td rowspan="2">Address:</td>
        </tr>
        <tr>
            <td>Country of Origin:</td>
            <td>Pre-Carriage Destination:</td>
            <td></td>
        </tr>
        <tr>
            <td>Country of Destination:</td>
            <td>Vessel/Flight No.:</td>
            <td colspan="2"></td>
        </tr>
        <tr>
            <td>Final Destination:</td>
            <td>Loading Port:</td>
            <td colspan="2"></td>
        </tr>
        <tr>
            <td>Place of Supply:</td>
            <td>Discharge Port:</td>
            <td colspan="2"></td>
        </tr>
        <tr>
            <td colspan="4">Partial Shipment:</td>
        </tr>
    </table>

    <table>
        <tr>
            <th>Sr. No.</th>
            <th>Material Code</th>
            <th>HSN/SAC</th>
            <th>Item Description</th>
            <th>Pack Size</th>
            <th>UOM</th>
            <th>Quantity</th>
            <th>Unit</th>
            <th>Price</th>
            <th>Amount</th>
        </tr>
        <!-- <apex:repeat value="{!ListOfItems}" var="item"> -->
            <tr>
                <td>{!item.srNo}</td>
                <td>{!item.materialCode}</td>
                <td>{!item.hsn}</td>
                <td>{!item.description}</td>
                <td>{!item.packSize}</td>
                <td>{!item.uom}</td>
                <td>{!item.quantity}</td>
                <td>{!item.unit}</td>
                <td>{!item.price}</td>
                <td>{!item.amount}</td>
            </tr>
        <!-- </apex:repeat> -->
        <tr>
            <td colspan="10">&nbsp;</td>
        </tr>
    </table>

    <table>
        <tr>
            <td colspan="6" rowspan="4" class="borderless">
                <b>Terms and Conditions:</b><br/>
                • All bank charges outside India will be borne by the customer and such charges should not be deducted from our payment.<br/>
                • We should receive full invoice amount in our bank account and you are liable to pay the bank charges which are applicable in India only.<br/>
                • After finalization of order if there is any change in Statutory Govt. levies than it will be in your scope.
            </td>
            <td colspan="2" class="bold">Amount Before Tax</td>
            <td colspan="2"></td>
        </tr>
        <tr>
            <td colspan="2" class="bold">CGST</td>
            <td colspan="2">9%</td>
        </tr>
        <tr>
            <td colspan="2" class="bold">SGST</td>
            <td colspan="2">9%</td>
        </tr>
        <tr>
            <td colspan="2" class="bold">IGST</td>
            <td colspan="2">18%</td>
        </tr>
        <tr>
            <td colspan="6" class="borderless">Net Weight:</td>
            <td colspan="2" class="bold">Round Off</td>
            <td colspan="2"></td>
        </tr>
        <tr>
            <td colspan="6" class="borderless"><b>Total Amount in Words:</b></td>
            <td colspan="2" class="bold">Total Amount After Tax</td>
            <td colspan="2"></td>
        </tr>
